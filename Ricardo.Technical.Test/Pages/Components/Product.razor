<div class="grid-item">
	<div class="grid-description">
		<div class="grid-header-footer">@Stock?.Item?.Name</div>
		<div class="grid-image-container">
			<img class="grid-image" src="@Stock?.Item?.Image" alt="@Stock?.Item?.Name" />
		</div>
		<div class="grid-header-footer">£ @Stock?.Item?.Price</div>
	</div>
	<div>
		<span>
			<label for="quantity">Quantity:</label>
			<input type="number" id="quantity" name="quantity" step="1" style="width: 4rem" @bind-value="@_quantity">
		</span>

		<span>
			<label for="quantity">Stock:</label>
			<input readonly disabled type="number" id="stock" name="stock" step="1" style="width: 4rem" @bind-value="@Stock.Amount">
		</span>
		<span style="float: right">
			<button type="button" onclick="@AddToBasket">Add to basket</button>
		</span>
	</div>

</div>

<Toasts class="p-3" Messages="@_messages" AutoHide="true" Delay="4000" Placement="ToastsPlacement.BottomRight" />